{{!-- update for burgers --}}

<img src='/public/assets/img/burger.png'>

<h1>Eat-Da-Burger!</h1>

<h2>Need to Eat!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
    <li>
      {{this.burger_name}}
      <button burger-burgname="{{this.id}}" class="delburg">Devour!</button>
    </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Mhmmm that was good!</h2>

<ul>
  {{#each burgers}}
  {{#if devoured}}
    {{this.burger_name}}
  {{/if}}
  {{/each}}
</ul>

<div class="container">


  <form id="create-form">

    <h2>Add a Burger</h2>
    <div class="form-group">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burg" name="name" placeholder="burger name here">
      
    </div>  

    <div class="form-group">
      <label for="devoured">Devour</label><br>
      <input type="radio" name="devour" value="1" id="devour" checked> Devoured!<br>
      <input type="radio" name="devour" value="0" id="notDevoured"> Not devoured
  </div>

  <button type="submit">Add Burger</button>
      <p>Enter a buger you want to eat and click "Add Burger" button</p>

  </form>

