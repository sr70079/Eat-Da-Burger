{{!-- update for burgers --}}
<div class="container">
  <img src='/assets/img/burger.png' alt='burger' class='center'>

  <div class="row" style="text-align: center">
      <div class="col-sm-12">
          <h1>Eat-Da-Burger!</h1>
      </div>
  </div>
    
  <div class="row">

    <div class="col-sm-6">
      <h2>Need to Eat!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
          <li>
            {{> burgers/burger-block devoured=false}}
          </li>
        {{/unless}}
        {{/each}}
      </ul>

    </div>

    <div class="col-sm-6">
      <h2>Mhmmm that was good!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
          <li>
            {{> burgers/burger-block devoured=true}}
          </li>
        {{/if}}
        {{/each}}
      </ul>

    </div>

  </div>

  {{!-- <div class="row form" style="align: center"> --}}

    <form id="create-form">

      <h2>Add a Burger</h2>

      <div class="form-group">

        <label for="burg">Burger Name:</label>
        <input type="text" id="burg" name="name" placeholder="burger name here">
        
      </div>  

      <button class="btn btn-dark" type="submit">Add Burger</button>
      <p>Enter a buger you want to eat and click "Add Burger" button</p>

    </form>

  {{!-- </div> --}}
  

</div>